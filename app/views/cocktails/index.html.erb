<%= render "banner" %>

<div class="wrapper text-center">
  <%= link_to 'add a cocktail', new_cocktail_path, class: "btn btn-primary" %>
</div>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
      <% if cocktail.photo.presence? %>
        <%= link_to cocktail_path(cocktail) do %>
          <div class="card"  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
            url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
            <%= cocktail.name %>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end  %>
</div>
</div>



